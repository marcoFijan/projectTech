{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },

  "rules": {
    "quotes": ["warn", "single"],
    "arrow-parens": ["warn"],
    "semi": ["error", "always"],
    "indent": ["warn", "tab"]
  }
}
